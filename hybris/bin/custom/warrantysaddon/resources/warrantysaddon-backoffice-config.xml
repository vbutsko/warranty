<config xmlns="http://www.hybris.com/cockpit/config"
        xmlns:explorer-tree="http://www.hybris.com/cockpitng/config/explorertree"
        xmlns:list="http://www.hybris.com/cockpitng/component/listView"
        xmlns:yss="http://www.hybris.com/cockpitng/config/simplesearch"
        xmlns:as="http://www.hybris.com/cockpitng/config/advancedsearch"
        xmlns:editorArea="http://www.hybris.com/cockpitng/component/editorArea"
        xmlns:wz="http://www.hybris.com/cockpitng/config/wizard-config">

    <context merge-by="module" parent="auto" component="explorer-tree">
        <explorer-tree:explorer-tree >
            <explorer-tree:navigation-node id="hmc_treenode_catalog">
                <explorer-tree:type-node id="Warranty" code="Warranty" />
            </explorer-tree:navigation-node>
        </explorer-tree:explorer-tree>
    </context>

    <context type="Warranty" component="listview">
        <list:list-view>
            <list:column qualifier="code"/>
            <list:column qualifier="warrantyType"/>
            <list:column qualifier="name"/>
        </list:list-view>
    </context>

    <context component="editor-area" type="Warranty">
        <editorArea:editorArea >
            <editorArea:tab name="essentials">
                <editorArea:section name="essentials">
                    <editorArea:attribute qualifier="code"/>
                    <editorArea:attribute qualifier="warrantyType"/>
                </editorArea:section>
                <editorArea:section name="data">
                    <editorArea:attribute qualifier="name"/>
                    <editorArea:attribute qualifier="length"/>
                </editorArea:section>
                <editorArea:section name="data">
                    <editorArea:attribute qualifier="description"/>
                    <editorArea:attribute qualifier="warrantyText"/>
                </editorArea:section>
                <editorArea:section name="MediaContainer">
                    <editorArea:attribute qualifier="warrantyTextPDF"/>
                </editorArea:section>
            </editorArea:tab>
            <editorArea:tab name="dates">
                <editorArea:section name="dates">
                    <editorArea:attribute qualifier="creationtime"/>
                    <editorArea:attribute qualifier="modifiedtime"/>
                </editorArea:section>
            </editorArea:tab>
        </editorArea:editorArea>
    </context>

    <context component="create-wizard" type="Warranty">
        <wz:flow id="WarrantyWizard" title="create.warranty.title">
            <wz:prepare id="warrantyPrepare">
                <wz:initialize property="newWarranty" type="Warranty"/>
            </wz:prepare>
            <wz:step id="step1" label="create.warranty.general.label" sublabel="create.warranty.general.sublabel">
                <wz:content id="step1.content">
                    <wz:property-list root="newWarranty">
                        <wz:property qualifier="code"/>
                        <wz:property qualifier="warrantyType"/>
                    </wz:property-list>
                </wz:content>
                <wz:navigation id="step1.navigation">
                    <wz:cancel/>
                    <wz:done visible="!#empty(newWarranty.code)">
                        <wz:save property="newWarranty"/>
                    </wz:done>
                </wz:navigation>
            </wz:step>
        </wz:flow>
    </context>

    <context type="Warranty" component="simple-search">
        <yss:simple-search >
            <yss:field name="pk"/>
            <yss:sort-field name="code" asc="true"/>
        </yss:simple-search>
    </context>


    <context type="Warranty" component="advanced-search">
        <as:advanced-search connection-operator="AND">
            <as:field-list>
                <as:field name="code" operator="contains" selected="true"/>
                <as:field name="name" operator="contains" selected="true"/>
                <as:field name="length" operator="equals" selected="true"/>
                <as:field name="description" operator="contains" selected="true"/>
                <as:field name="pk" operator="equal" selected="false" sortable="false"/>
            </as:field-list>
            <as:sort-field name="code" asc="false" />
        </as:advanced-search>
    </context>

    <context merge-by="module" type="Product" component="editor-area">
        <editorArea:editorArea xmlns:editorArea="http://www.hybris.com/cockpitng/component/editorArea">
            <editorArea:tab name="hmc.tab.product.warranties">
                <editorArea:section name="hmc.product.warranties">
                    <editorArea:attribute qualifier="warranties"/>
                </editorArea:section>
            </editorArea:tab>
        </editorArea:editorArea>
    </context>

    <context merge-by="module" type="Product" component="create-wizard">
        <wz:flow id="ProductWizard" title="create.title(ctx.TYPE_CODE)">
            <wz:step id="step3" label="create.product.categories.label" sublabel="create.product.categories.sublabel">
                <wz:info label="create.product.categories.info.label" position="top"/>
                <wz:content id="step3.content">
                    <wz:property qualifier="newProduct.supercategories"/>
                </wz:content>
                <wz:navigation id="step3.navigation">
                    <wz:cancel/>
                    <wz:back/>
                    <wz:next/>
                    <wz:done>
                        <wz:save property="newProduct"/>
                    </wz:done>
                </wz:navigation>
            </wz:step>
            <wz:step id="step4" label="create.product.warranties.label" sublabel="create.product.warranties.sublabel">
                <wz:info label="create.product.warranties.warranties.label" position="top"/>
                <wz:content id="step3.content">
                    <wz:property qualifier="newProduct.warranties"/>
                </wz:content>
                <wz:navigation id="step3.navigation">
                    <wz:cancel/>
                    <wz:back/>
                    <wz:done>
                        <wz:save property="newProduct"/>
                    </wz:done>
                </wz:navigation>
            </wz:step>
        </wz:flow>
    </context>
</config>